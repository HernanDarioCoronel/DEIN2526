<Window x:Class="Storyboard3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Storyboard3"
    mc:Ignorable="d"
    Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Click me!" Width="80" Height="20" Name="RotatingButton"
            RenderTransformOrigin="0.5, 0.5">
            <Button.RenderTransform>
                <RotateTransform Angle="0" />
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Button.Click">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetName="RotatingButton"
                                Storyboard.TargetProperty="RenderTransform.Angle"
                                By="360" Duration="0:0:0.5"
                            />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                            To="180" Duration="0:0:0.3" />
                                        <DoubleAnimation Storyboard.TargetProperty="Height"
                                            To="40" Duration="0:0:0.3" />
                                        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                            To="30" Duration="0:0:0.3" />
                                        <ThicknessAnimation
                                            Storyboard.TargetProperty="BorderThickness"
                                            To="5" Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>

                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                            Duration="0:0:0.3" />
                                        <DoubleAnimation Storyboard.TargetProperty="Height"
                                            Duration="0:0:0.3" />
                                        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                            Duration="0:0:0.3" />
                                        <ThicknessAnimation
                                            Storyboard.TargetProperty="BorderThickness"
                                            Duration="0:0:0.3" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>