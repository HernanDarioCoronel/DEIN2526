<Window x:Class="WpfWrapPanel.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfWrapPanel"
    mc:Ignorable="d"
    Title="MainWindow" Height="200" Width="670">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="White" Offset="0"/>
            <GradientStop Color="Green" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <WrapPanel>
        <StackPanel Margin="20">
            <Label Background="LightBlue" Content="Border" HorizontalContentAlignment="Center" />
            <Border
                Background="Yellow"
                Width="175"
                Height="100"
                BorderBrush="Black"
                BorderThickness="3"
            >
                <StackPanel>
                    <Button Content="Button1" />
                    <Button Content="Button2" />
                </StackPanel>
            </Border>
        </StackPanel>
        <StackPanel Margin="20">
            <Label Background="LightBlue" Content="ScrollViewer" HorizontalContentAlignment="Center" />
            <ScrollViewer Background="Yellow" Height="100" Width="175">
                <StackPanel>
                    <Button Content="Button1" />
                    <Button Content="Button2" />
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
        <StackPanel Margin="20" Background="LightBlue">
            <Label Background="LightBlue" Content="ScrollViewer" HorizontalContentAlignment="Center" />
            <Viewbox Height="100" Width="175">
                <StackPanel>
                    <Button Content="Button1" />
                    <Button Content="Button2" />
                </StackPanel>
            </Viewbox>
        </StackPanel>
    </WrapPanel>
</Window>