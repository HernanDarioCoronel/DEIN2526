<Window x:Class="DataBinding3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="650" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>

        <DatePicker x:Name="dtPicker" Grid.Column="1" HorizontalAlignment="Center" Margin="5"
            SelectedDate="2014-11-21" />

        <Label Content="Fecha completa:" Grid.Row="1" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:G\}}"
            Grid.Row="1" Grid.Column="1" Margin="2" />

        <Label Content="Fecha corta:" Grid.Row="2" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:d\}}"
            Grid.Row="2" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=\{0:d\}" Grid.Row="2" Grid.Column="2"
            VerticalAlignment="Center" Margin="10,0" />

        <Label Content="Fecha larga:" Grid.Row="3" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:D\}}"
            Grid.Row="3" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=\{0:D\}" Grid.Row="3" Grid.Column="2"
            VerticalAlignment="Center" Margin="10,0" />

        <Label Content="Fecha larga, tiempo corto:" Grid.Row="4" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:f\}}"
            Grid.Row="4" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=f" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center"
            Margin="10,0" />

        <Label Content="Fecha larga, tiempo largo:" Grid.Row="5" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:F\}}"
            Grid.Row="5" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=\{0:F\}" Grid.Row="5" Grid.Column="2"
            VerticalAlignment="Center" Margin="10,0" />

        <Label Content="Fecha corta, tiempo corto:" Grid.Row="6" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:g\}}"
            Grid.Row="6" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=g" Grid.Row="6" Grid.Column="2" VerticalAlignment="Center"
            Margin="10,0" />

        <Label Content="Fecha corta, tiempo largo:" Grid.Row="7" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:G\}}"
            Grid.Row="7" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=\{0:G\}" Grid.Row="7" Grid.Column="2"
            VerticalAlignment="Center" Margin="10,0" />

        <Label Content="Mes y día:" Grid.Row="8" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:m\}}"
            Grid.Row="8" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=m" Grid.Row="8" Grid.Column="2" VerticalAlignment="Center"
            Margin="10,0" />

        <Label Content="Fecha y hora redonda:" Grid.Row="9" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:O\}}"
            Grid.Row="9" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=\{0:O\}" Grid.Row="9" Grid.Column="2"
            VerticalAlignment="Center" Margin="10,0" />

        <Label Content="RFC1123:" Grid.Row="10" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:R\}}"
            Grid.Row="10" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=\{0:R\}" Grid.Row="10" Grid.Column="2"
            VerticalAlignment="Center" Margin="10,0" />

        <Label Content="Fecha y hora acomodables:" Grid.Row="11" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:s\}}"
            Grid.Row="11" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=\{0:s\}" Grid.Row="11" Grid.Column="2"
            VerticalAlignment="Center" Margin="10,0" />

        <Label Content="Hora corta:" Grid.Row="12" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:t\}}"
            Grid.Row="12" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=\{0:t\}" Grid.Row="12" Grid.Column="2"
            VerticalAlignment="Center" Margin="10,0" />

        <Label Content="Hora larga:" Grid.Row="13" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:T\}}"
            Grid.Row="13" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=\{0:T\}" Grid.Row="13" Grid.Column="2"
            VerticalAlignment="Center" Margin="10,0" />

        <Label Content="Hora universal:" Grid.Row="14" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:u\}}"
            Grid.Row="14" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=u" Grid.Row="14" Grid.Column="2" VerticalAlignment="Center"
            Margin="10,0" />

        <Label Content="Hora y fecha universal:" Grid.Row="15" VerticalAlignment="Center" />
        <TextBox Text="{Binding SelectedDate, ElementName=dtPicker, StringFormat=\{0:U\}}"
            Grid.Row="15" Grid.Column="1" Margin="2" />
        <TextBlock Text="StringFormat=\{0:U\}" Grid.Row="15" Grid.Column="2"
            VerticalAlignment="Center" Margin="10,0" />
    </Grid>
</Window>