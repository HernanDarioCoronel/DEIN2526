<Window x:Class="ControlCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Canvas>
        <Border BorderBrush="Black" BorderThickness="25" Canvas.Left="10" Canvas.Top="10">
            <Rectangle Fill="Red" Width="500" Height="500" />
        </Border>
        <Border BorderBrush="Black" BorderThickness="25" Canvas.Left="110" Canvas.Top="110">
            <Rectangle Fill="Blue" Width="500" Height="500" />
        </Border>
        <Border BorderBrush="Black" BorderThickness="25" Canvas.Left="210" Canvas.Top="210">
            <Rectangle Fill="Green" Width="500" Height="500" />
        </Border>
    </Canvas>
</Window>
