<Window
    x:Class="GestionDeProductos.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionDeProductos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="800"
    mc:Ignorable="d">
    <DockPanel Background="#506266">
        <StatusBar DockPanel.Dock="Bottom">
            <Label>Hola</Label>
        </StatusBar>
        <Border
            Width="100"
            Margin="0,10,10,10"
            BorderBrush="Black"
            BorderThickness="1"
            DockPanel.Dock="Left">
            <Grid Background="#10454F">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    BorderThickness="1"
                    BorderBrush="Black"
                    Grid.Row="0"
                    Margin="15"
                    Background="#506266"
                    CornerRadius="10">
                    <StackPanel>
                        <Button>
                            <Image
                                Name="homeImg"
                                Width="60"
                                Height="60" />
                        </Button>
                        <Label HorizontalAlignment="Center" Content="Home" />
                    </StackPanel>
                </Border>
                <Border
                    BorderThickness="1"
                    BorderBrush="Black"
                    Grid.Row="1"
                    Margin="15"
                    Background="#506266"
                    CornerRadius="10">
                    <StackPanel>
                        <Button>
                            <Image
                                Name="userImg"
                                Width="60"
                                Height="60" />
                        </Button>
                        <Label HorizontalAlignment="Center" Content="Usuarios" />
                    </StackPanel>
                </Border>
                <Border
                    BorderThickness="1"
                    BorderBrush="Black"
                    Grid.Row="2"
                    Margin="15"
                    Background="#506266"
                    CornerRadius="10">
                    <StackPanel>
                        <Button>
                            <Image
                                Name="productsImg"
                                Width="60"
                                Height="60" />
                        </Button>
                        <Label HorizontalAlignment="Center" Content="Productos" />
                    </StackPanel>
                </Border>
                <Border
                    BorderThickness="1"
                    BorderBrush="Black"
                    Grid.Row="3"
                    Margin="15"
                    Background="#506266"
                    CornerRadius="10">
                    <StackPanel>
                        <Button>
                            <Image
                                Name="ajustesImg"
                                Width="60"
                                Height="60" />
                        </Button>
                        <Label HorizontalAlignment="Center" Content="Ajustes" />
                    </StackPanel>
                </Border>
                <Border
                    BorderThickness="1"
                    BorderBrush="Black"
                    Grid.Row="4"
                    Margin="15"
                    Background="#506266"
                    CornerRadius="10">
                    <StackPanel>
                        <Button>
                            <Image
                                Name="informesImg"
                                Width="60"
                                Height="60" />
                        </Button>
                        <Label HorizontalAlignment="Center" Content="Informes" />
                    </StackPanel>
                </Border>
                <Border
                    BorderThickness="1"
                    BorderBrush="Black"
                    Grid.Row="5"
                    Margin="15"
                    Background="#506266"
                    CornerRadius="10">
                    <StackPanel>
                        <Button>
                            <Image
                                Name="aboutImg"
                                Width="60"
                                Height="60" />
                        </Button>
                        <Label HorizontalAlignment="Center" Content="Acerca De" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>


        <StackPanel Background="#818274">
            <StackPanel Margin="20">
                <Label Content="PRODUCTOS" />
                <Border BorderBrush="Black" BorderThickness="1">
                    <DataGrid
                        Name="productosDataGrid"
                        Margin="20"
                        AutoGenerateColumns="False"
                        ScrollViewer.CanContentScroll="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Codigo}"
                                Header="Código" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Nombre}"
                                Header="Producto" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Precio}"
                                Header="Precio" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Unidades}"
                                Header="Unidades" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </StackPanel>

            <StackPanel Margin="20">
                <Label Content="Detalles" />
                <Border BorderBrush="Black" BorderThickness="1">
                    <Grid Name="container">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Name="leftContainer"
                            Grid.Column="1"
                            Margin="20"
                            HorizontalAlignment="Left">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" HorizontalAlignment="Left">Precio unitario</Label>
                                <TextBox
                                    Grid.Column="2"
                                    Width="180"
                                    HorizontalAlignment="Right" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" HorizontalAlignment="Left">Unidades</Label>
                                <TextBox
                                    Grid.Column="2"
                                    Width="180"
                                    HorizontalAlignment="Right" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" HorizontalAlignment="Left">Unidades pedido</Label>
                                <TextBox
                                    Grid.Column="2"
                                    Width="180"
                                    HorizontalAlignment="Right" />
                            </Grid>
                        </StackPanel>
                        <StackPanel
                            Name="rightContainer"
                            Grid.Column="3"
                            Margin="20"
                            HorizontalAlignment="Right">
                            <Image
                                Name="productImage"
                                Width="50"
                                Height="50" />
                            <Label>Lorem ipsum</Label>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
