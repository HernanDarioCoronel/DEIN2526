<Window
    x:Class="MiPrimerWPF.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MiPrimerWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Window1"
    Width="500         "
    Height="400"
    mc:Ignorable="d">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0" Color="Magenta" />
            <GradientStop Offset="1" Color="LightBlue" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Center">
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="75x75" />
            <Border
                Height="37.5px"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="15,15,0,0">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="C1, Top" />
            </Border>
            <Border
                Height="37.5px"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="0,0,15,15">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="C1, Bottom" />
            </Border>
        </StackPanel>

        <StackPanel Grid.Column="2" VerticalAlignment="Center">
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="50x100" />
            <Border
                Height="50px"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="15,15,0,0">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="C2, Top" />
            </Border>
            <Border
                Height="50px"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="0,0,15,15">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="C2, Bottom" />
            </Border>
        </StackPanel>

        <StackPanel Grid.Column="4" VerticalAlignment="Center">
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="150x200" />
            <Border
                Height="100"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="15,15,0,0">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="C3, Top" />
            </Border>
            <Border
                Height="100"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="0,0,15,15">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="C3, Bottom" />
            </Border>
        </StackPanel>

        <StackPanel
            Grid.Column="6"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Label
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="ANYxANY" />
            <Border
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="15,15,0,0">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="C1, Top" />
            </Border>
            <Border
                Grid.Column="0"
                Height="37.5px"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="0,0,15,15">
                <Label
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="C1, Bottom" />
            </Border>
        </StackPanel>
    </Grid>
</Window>
