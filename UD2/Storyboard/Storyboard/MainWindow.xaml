<Window x:Class="Storyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Storyboard"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Window.Resources>
        <Storyboard x:Key="MoverRectanguloStoryboard">
            <DoubleAnimation 
                Storyboard.TargetName="MiRectangulo" 
                Storyboard.TargetProperty="(Canvas.Left)"
                From="0" To="300" 
                Duration="0:0:3" 
                AutoReverse="True" 
                RepeatBehavior="Forever" />
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource MoverRectanguloStoryboard}" />
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Canvas>
            <Rectangle x:Name="MiRectangulo"
                       Width="100" 
                       Height="100" 
                       Fill="Blue" 
                       Canvas.Left="0" 
                       Canvas.Top="50" />
        </Canvas>
    </Grid>
</Window>
