<Window
    x:Class="StackPanel2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StackPanel2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="700"
    Height="350"
    mc:Ignorable="d">
    <StackPanel
        Name="panel"
        HorizontalAlignment="Center"
        Orientation="Vertical">
        <Label Margin="5" HorizontalContentAlignment="Center">Una pila de botones</Label>
        <Button
            Name="bt1"
            Width="240"
            Margin="5"
            Content="Botón 1" />
        <Button
            Name="bt2"
            Width="240"
            Margin="5"
            Content="Botón 2" />
        <Button
            Name="bt3"
            Width="240"
            Margin="5"
            Content="Botón 3" />
        <Button
            Name="bt4"
            Width="240"
            Margin="5"
            Content="Botón 4" />
        <CheckBox
            Margin="5"
            HorizontalAlignment="Center"
            Checked="CheckBox_Checked"
            Unchecked="CheckBox_Unchecked" 
            Content="Usar orientación vertical" />
    </StackPanel>
</Window>
