<Window x:Class="teclado_numerico.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:teclado_numerico"
    mc:Ignorable="d"
    Title="MainWindow" Height="800" Width="600">
    <Grid HorizontalAlignment="Left" Width="600">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" TextAlignment="Right" Text="0"
            FontSize="48" VerticalContentAlignment="Center" Padding="20" />
        <Button Grid.Row="0" Grid.Column="3" Content="Esc" FontSize="36" FontWeight="Bold" />
        <Button Grid.Row="1" Grid.Column="0" Content="7" FontSize="36" FontWeight="Bold" />
        <Button Grid.Row="1" Grid.Column="1" Content="8" FontSize="36" FontWeight="Bold" />
        <Button Grid.Row="1" Grid.Column="2" Content="9" FontSize="36" FontWeight="Bold" />
        <Button Grid.Row="1" Grid.Column="3" Content="Borrar" FontSize="36" FontWeight="Bold" />
        <Button Grid.Row="2" Grid.Column="0" Content="4" FontSize="36" FontWeight="Bold" />
        <Button Grid.Row="2" Grid.Column="1" Content="5" FontSize="36" FontWeight="Bold" />
        <Button Grid.Row="2" Grid.Column="2" Content="6" FontSize="36" FontWeight="Bold" />
        <Button Grid.Row="3" Grid.Column="0" Content="1" FontSize="36" FontWeight="Bold" />
        <Button Grid.Row="3" Grid.Column="1" Content="2" FontSize="36" FontWeight="Bold" />
        <Button Grid.Row="3" Grid.Column="2" Content="3" FontSize="36" FontWeight="Bold" />
        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="0" FontSize="36"
            FontWeight="Bold" />
        <Button Grid.Row="4" Grid.Column="2" Content="." FontSize="36" FontWeight="Bold" />
        <Button Grid.Row="2" Grid.Column="3" Grid.RowSpan="3" Content="Enter" FontSize="36"
            FontWeight="Bold" />
    </Grid>
</Window>