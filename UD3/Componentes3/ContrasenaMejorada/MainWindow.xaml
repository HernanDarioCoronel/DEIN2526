<Window x:Class="ContrasenaMejorada.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ContrasenaMejorada"
    mc:Ignorable="d"
    Title="Login" Height="350" Width="500" Background="#F0F0F0">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <StackPanel Width="350" Background="White">
            <StackPanel.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2" />
            </StackPanel.Effect>
            <StackPanel Margin="20">
                <TextBox x:Name="txtEmail" Margin="0,0,0,10" Padding="5"
                    FontSize="14" Foreground="Gray" Text="thewindowsclub@hotmail.com" />

                <Grid Height="35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>

                    <PasswordBox x:Name="pbPassword" Grid.Column="0" Grid.ColumnSpan="2"
                        Padding="5,5,35,5" VerticalContentAlignment="Center"
                        PasswordChar="●" FontSize="14" />

                    <TextBox x:Name="txtPasswordReveal" Grid.Column="0" Grid.ColumnSpan="2"
                        Padding="5,5,35,5" VerticalContentAlignment="Center"
                        Visibility="Collapsed" FontSize="14" />

                    <Border Grid.Column="1" Background="Transparent" Cursor="Hand"
                        MouseEnter="Eye_MouseEnter" MouseLeave="Eye_MouseLeave">
                        <TextBlock Text="👁" FontSize="18" HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                </Grid>

                <CheckBox Content="Keep me signed in" Margin="0,15,0,15"
                    VerticalContentAlignment="Center" />

                <Button Content="Sign in" Background="#0078D7" Foreground="White"
                    Padding="10" FontWeight="Bold" BorderThickness="0" HorizontalAlignment="Right"
                    Margin="0,0,5,5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>