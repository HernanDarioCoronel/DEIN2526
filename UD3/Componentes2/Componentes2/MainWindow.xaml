<Window xmlns:Input="clr-namespace:Input;assembly=Input"  x:Class="Componentes2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Componentes2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Border  BorderThickness="1" Margin="10">
            <StackPanel >
                <Input:LabeledTextBox 
                    x:Name="UsuarioTextBox"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    LabelText="Usuario"
                    TextBoxWidth="150"
                    />
                <Input:LabeledTextBox 
                    x:Name="ContraseñaTextBox"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    LabelText="Contraseña"
                    TextBoxWidth="150"
                    />
                <Button 
                    x:Name="IniciarSesionButton"
                    Click="BtnLogin_Click"
                    Content="Iniciar Sesión" 
                    Margin="5" Width="100" 
                    HorizontalAlignment="Left"
                    />
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
