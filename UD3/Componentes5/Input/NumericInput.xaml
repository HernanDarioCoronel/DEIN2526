<UserControl x:Name="Root"
    x:Class="Input.NumericInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Input"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="30*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBox Name="tbValor" TextAlignment="Left" VerticalContentAlignment="Center" Padding="5" FontSize="28" Text="{Binding Value, ElementName=Root}" PreviewTextInput="valor_PreviewTextInput" Height="60" Grid.RowSpan="2" Grid.Column="0" Grid.Row="0" Margin="1"/>
        <Button Content="+" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="0" Margin="1" Click="btPlus_click"/>
        <Button Content="-" FontSize="18" FontWeight="Bold" Grid.Column="1" Grid.Row="1" Margin="1" Click="btMinus_click"/>
    </Grid>
</UserControl>
